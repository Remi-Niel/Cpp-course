// rules section

#include.*                      //ignore
\/\/.*                          //ignore

\"                              more(); begin(StartCondition__::string);
<string>\"                      begin(StartCondition__::multiline); return STRING_PART;
<string>.                       more();
<multiline>\"                   more(); begin(StartCondition__::string);
<multiline>[^ \n\t]             begin(StartCondition__::INITIAL); return STRING_DONE;

<<EOF>>                         return DONE;
